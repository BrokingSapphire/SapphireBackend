{
  "name": "sapphire_backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "Abhigya",
  "scripts": {
    "build": "yarn clean && tsc -p tsconfig-build.json",
    "start": "node -r dotenv/config dist/main/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --clear -r dotenv/config  src/server.ts",
    "clean": "rimraf dist",
    "lint": "tslint --project tsconfig.json",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js)\" --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "kysely": "^0.27.5",
    "pg": "^8.13.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.21.0",
    "@jest/globals": "^29.7.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.13.5",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.7.3"
  }
}
