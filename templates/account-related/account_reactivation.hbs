{{#> layout}}
{{#*inline "customStyles"}}
.status-banner {
    margin: 0 0 32px 0;
    position: relative;
    text-align: center;
}

.status-icon {
    font-size: 64px;
    color: var(--success);
    margin-bottom: 16px;
}

.status-title {
    font-size: 32px;
    font-weight: 700;
    color: var(--success);
    margin: 0 0 12px 0;
    text-align: center;
}

.status-subtitle {
    font-size: 18px;
    color: var(--text-medium);
    margin-bottom: 32px;
    text-align: center;
}

.feature-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
    margin: 24px 0;
}

.feature-card {
    background-color: var(--primary-light);
    border-radius: 12px;
    padding: 20px;
    text-align: center;
}

.feature-icon {
    font-size: 32px;
    margin-bottom: 12px;
}

.feature-title {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--primary);
}

.feature-desc {
    font-size: 14px;
    color: var(--text-medium);
    margin-bottom: 0;
}

.steps-container {
    margin: 32px 0;
}

.step {
    display: flex;
    margin-bottom: 24px;
    position: relative;
    align-items: flex-start;
}

.step-number {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    background-color: var(--primary);
    border-radius: 50%;
    color: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    margin-right: 16px;
    margin-top: 4px;
}

.step-content {
    flex-grow: 1;
}

.step-title {
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--primary);
}

.help-section {
    background-color: var(--primary-light);
    border-radius: 12px;
    padding: 16px;
    margin-top: 32px;
    display: flex;
    align-items: flex-start;
}

.help-icon {
    flex-shrink: 0;
    margin-right: 12px;
    font-size: 24px;
    color: var(--primary);
}

.help-content {
    font-size: 14px;
    color: var(--text-medium);
}
{{/inline}}

