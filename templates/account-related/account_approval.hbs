{{#> layout}}
{{#*inline "customStyles"}}
.status-banner {
    margin: 0 0 32px 0;
    position: relative;
    text-align: center;
}

.status-icon {
    font-size: 64px;
    color: var(--success);
    margin-bottom: 16px;
}

.status-title {
    font-size: 32px;
    font-weight: 700;
    color: var(--success);
    margin: 0 0 12px 0;
    text-align: center;
}

.status-subtitle {
    font-size: 18px;
    color: var(--text-medium);
    margin-bottom: 32px;
    text-align: center;
}

.message-box {
    background-color: var(--success-light);
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 32px;
}

.account-details {
    background-color: var(--primary-light);
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 32px;
}

.detail-row {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    border-bottom: 1px solid var(--border-light);
}

.detail-row:last-child {
    border-bottom: none;
}

.detail-label {
    font-weight: 500;
    color: var(--text-medium);
}

.detail-value {
    font-weight: 500;
    color: var(--text-dark);
}

.cta-container {
    text-align: center;
    margin: 32px 0;
}

.signature {
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid var(--border-light);
}

.signature-image {
    max-width: 150px;
    height: auto;
    margin-bottom: 16px;
}
{{/inline}}

{{#*inline "body"}}
<div class="status-banner">
