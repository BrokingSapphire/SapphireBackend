{{#> layout}}
{{#*inline "customStyles"}}
.kyc-banner {
    margin: 0 0 32px 0;
    position: relative;
    text-align: center;
}

.kyc-image {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    margin-bottom: 24px;
}

.kyc-title {
    font-size: 32px;
    font-weight: 700;
    color: var(--primary);
    margin: 0 0 12px 0;
    text-align: center;
}

.kyc-subtitle {
    font-size: 18px;
    color: var(--text-medium);
    margin-bottom: 32px;
    text-align: center;
}

.message-box {
    background-color: var(--primary-light);
    border-radius: 12px;
    padding: 24px;
    position: relative;
    overflow: hidden;
    margin-bottom: 32px;
}

.pattern-bg {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 64px;
    opacity: 0.1;
    color: var(--primary);
}

.docs-required-section {
    margin: 32px 0;
}

.docs-required-title {
    text-align: center;
    margin-bottom: 24px;
    color: var(--primary);
    font-size: 20px;
    font-weight: 600;
}

.doc-item {
    display: flex;
    margin-bottom: 24px;
    align-items: flex-start;
    background-color: var(--white);
    border-radius: 12px;
    padding: 16px;
    border: 1px solid var(--border-light);
}

.doc-icon {
    flex-shrink: 0;
    font-size: 32px;
    margin-right: 16px;
    color: var(--primary);
}

.doc-content {
    flex-grow: 1;
}

.doc-title {
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--primary);
}

.doc-description {
    font-size: 14px;
    color: var(--text-medium);
    margin-bottom: 8px;
}

.doc-format {
    font-size: 13px;
    color: var(--text-light);
    display: flex;
    align-items: center;
}

.format-icon {
    margin-right: 4px;
    font-size: 14px;
}

.submission-process {
    background-color: var(--white);
    border-radius: 12px;
    padding: 24px;
    margin: 32px 0;
    border: 1px solid var(--border-light);
}

.submission-process-title {
    margin-bottom: 24px;
    color: var(--primary);
    font-size: 18px;
    font-weight: 600;
    text-align: center;
}

.deadline-box {
    background-color: var(--warning-light);
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    margin: 32px 0;
}

.deadline-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--warning);
    margin-bottom: 8px;
}

.deadline-date {
    font-size: 24px;
    font-weight: 700;
    color: var(--warning);
}

.help-box {
    background-color: var(--success-light);
    border-radius: 12px;
    padding: 16px;
    margin-top: 32px;
    display: flex;
    align-items: flex-start;
}

.help-icon {
    flex-shrink: 0;
    margin-right: 12px;
    font-size: 24px;
    color: var(--success);
}

.help-content {
    font-size: 14px;
    color: var(--text-medium);
}
{{/inline}}

