 {{#> layout}}
{{#*inline "customStyles"}}
.status-banner {
    margin: 0 0 32px 0;
    position: relative;
    text-align: center;
}

.status-icon {
    font-size: 64px;
    color: var(--warning);
    margin-bottom: 16px;
}

.status-title {
    font-size: 32px;
    font-weight: 700;
    color: var(--primary);
    margin: 0 0 12px 0;
    text-align: center;
}

.status-subtitle {
    font-size: 18px;
    color: var(--text-medium);
    margin-bottom: 32px;
    text-align: center;
}

.application-details {
    background-color: var(--primary-light);
    border-radius: 12px;
    padding: 24px;
    margin: 32px 0;
}

.application-details-title {
    text-align: center;
    margin-bottom: 16px;
    color: var(--primary);
    font-size: 18px;
    font-weight: 600;
}

.rejection-reason {
    background-color: var(--warning-light);
    border-radius: 12px;
    padding: 24px;
    margin: 32px 0;
}

.rejection-title {
    text-align: center;
    margin-bottom: 16px;
    color: var(--warning);
    font-size: 18px;
    font-weight: 600;
}

.reason-item {
    display: flex;
    margin-bottom: 16px;
    align-items: flex-start;
}

.reason-item:last-child {
    margin-bottom: 0;
}

.reason-icon {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    background-color: var(--warning);
    border-radius: 50%;
    color: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 16px;
    margin-top: 4px;
    font-size: 12px;
}

.reason-content {
    flex-grow: 1;
}

.next-steps {
    background-color: var(--accent-light);
    border-radius: 12px;
    padding: 24px;
    margin: 32px 0;
}

.next-steps-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 16px;
    text-align: center;
}

.step {
    display: flex;
    margin-bottom: 16px;
}

.step:last-child {
    margin-bottom: 0;
}

.step-number {
    flex-shrink: 0;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    background-color: var(--primary);
    color: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    margin-right: 16px;
    margin-top: 4px;
    font-size: 14px;
}

.step-content {
    flex-grow: 1;
}

.step-title {
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 4px;
}

.step-description {
    font-size: 14px;
    color: var(--text-medium);
}
{{/inline}}

{{#*inline "body"}}
<div class="status-banner">
    <div class="status-icon">‚ÑπÔ∏è</div>
    <h1 class="status-title">Application Update</h1>
    <p class="status-subtitle">We need additional information</p>
</div>

<p>Dear <strong>{{userName}}</strong>,</p>

<p>Thank you for applying to open a trading account with Sapphire Broking. We have reviewed your application and unfortunately, we are unable to approve it at this time due to certain discrepancies or incomplete information.</p>

<div class="message-box">
    <div class="message-content">
        <p>We understand this may be disappointing, but we want to assure you that this is not a final rejection. With some additional information and corrections, we would be happy to reconsider your application.</p>
        
        <p style="margin-bottom: 0;">Please review the details below to understand why your application could not be approved and what steps you can take to address these issues.</p>
    </div>
</div>

<div class="application-details">
    <h3 class="application-details-title">Application Information</h3>
    
    {{> detail-row label="Application ID" value=applicationId}}
    {{> detail-row label="Applicant Name" value=userName}}
    {{> detail-row label="Application Date" value=applicationDate}}
    {{> detail-row label="Review Date" value=reviewDate}}
    {{> detail-row label="Status" value="Pending Additional Information" valueStyle="color: var(--warning); font-weight: 600;"}}
</div>

<div class="rejection-reason">
    <h3 class="rejection-title">Reasons for Non-Approval</h3>
    
    {{#each rejectionReasons}}
    <div class="reason-item">
        <div class="reason-icon">{{add @index 1}}</div>
        <div class="reason-content">
            <p><strong>{{this.title}}</strong> - {{this.description}}</p>
        </div>
    </div>
    {{/each}}
</div>

<div class="next-steps">
    <h3 class="next-steps-title">Next Steps</h3>
    
    <div class="step">
        <div class="step-number">1</div>
        <div class="step-content">
            <h4 class="step-title">Log in to Your Application Portal</h4>
            <p class="step-description">Using your application ID and registered email, log in to your application portal.</p>
        </div>
    </div>
    
    <div class="step">
        <div class="step-number">2</div>
        <div class="step-content">
            <h4 class="step-title">Update Required Information</h4>
            <p class="step-description">Review the sections marked as 'Requires Attention' and update the necessary information.</p>
        </div>
    </div>
    
    <div class="step">
        <div class="step-number">3</div>
        <div class="step-content">
            <h4 class="step-title">Re-Upload Required Documents</h4>
            <p class="step-description">Upload clear, high-resolution images of the required documents.</p>
        </div>
    </div>
    
    <div class="step">
        <div class="step-number">4</div>
        <div class="step-content">
            <h4 class="step-title">Resubmit Your Application</h4>
            <p class="step-description">Once all the required fields are updated, resubmit your application for review.</p>
        </div>
    </div>
</div>

<div class="cta-container">
    <a href="{{applicationUrl}}" class="button">UPDATE YOUR APPLICATION</a>
</div>

<div class="help-section">
    <div class="help-icon">üí¨</div>
    <div class="help-content">
        <p style="margin-bottom: 8px;"><strong>Need Assistance?</strong></p>
        <p style="margin-bottom: 0;">If you have any questions or need help updating your application, our dedicated support team is available to assist you. Contact us at <strong>{{onboardingEmail}}</strong> or call <strong>{{supportPhone}}</strong> (9:00 AM to 6:00 PM, Monday to Friday).</p>
    </div>
</div>

<p style="text-align: center; margin-top: 32px;">We look forward to receiving your updated application and welcoming you to Sapphire Broking.</p>
{{/inline}}
{{/layout}}