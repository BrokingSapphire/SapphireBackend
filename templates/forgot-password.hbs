{{#> layout}}
  <div class="icon-header">
    <div class="icon-circle">
      <div class="icon">üîë</div>
    </div>
    <h1>Password Reset Code</h1>
    <p>Secure password reset for your Sapphire Terminal account</p>
  </div>

  <p>Dear <strong>{{userName}}</strong>,</p>

  <p>
    Your OTP to reset your Sapphire Terminal password is provided below. Do not share this OTP. It is valid for 10 minutes.
  </p>

  <div class="otp-container">
    <p>Your password reset code:</p>
    <div class="otp-code">{{otp}}</div>
    <div class="timer-box">
      <span class="timer-icon">‚è±Ô∏è</span> This code will expire in 10 minutes
    </div>
  </div>

  <div class="reset-details">
    <h3 class="reset-details-title">Password Reset Request Details</h3>

    <div class="detail-row">
      <div class="detail-label">Date & Time</div>
      <div class="detail-value">{{date}} at {{time}}</div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Email</div>
      <div class="detail-value">{{email}}</div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Device</div>
      <div class="detail-value">{{deviceType}}</div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Location</div>
      <div class="detail-value">{{location}}</div>
    </div>

    <div class="detail-row">
      <div class="detail-label">IP Address</div>
      <div class="detail-value">{{ip}}</div>
    </div>
  </div>

  {{> password_tips}}
  {{> security_tips}}

  <div class="suspicious-alert">
    <div class="suspicious-icon">‚ö†Ô∏è</div>
    <div class="suspicious-content">
      <p style="margin-bottom: 8px"><strong>Didn't Request a Password Reset?</strong></p>
      <p style="margin-bottom: 0">
        If you didn't initiate this password reset request, please secure your account immediately by
        contacting our security team at
        <strong>{{supportEmail}}</strong> or call <strong>{{supportPhone}}</strong>.
        Your current password remains unchanged until you complete the reset process.
      </p>
    </div>
  </div>

  {{> help_section}}

  <p style="text-align: center; margin-top: 32px; font-style: italic">
    This is an automated message. Please do not reply to this email.
  </p>
{{/layout}}