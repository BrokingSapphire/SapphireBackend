{{#> layout}}
{{#*inline "customStyles"}}
.icon-header {
    text-align: center;
    margin-bottom: 32px;
}

.icon-circle {
    width: 80px;
    height: 80px;
    background-color: var(--primary-light);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 16px;
}

.icon {
    font-size: 32px;
}

.otp-container {
    background-color: var(--primary-light);
    border-radius: 12px;
    padding: 24px;
    text-align: center;
    margin: 24px 0 32px;
}

.otp-code {
    font-size: 32px;
    font-weight: 700;
    letter-spacing: 8px;
    color: var(--primary);
    margin: 16px 0;
    padding: 8px 0;
}

.timer-box {
    font-size: 14px;
    color: var(--text-medium);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.timer-icon {
    font-size: 16px;
}

.login-details {
    background-color: var(--primary-light);
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 32px;
}

.login-details-title {
    margin-top: 0;
    margin-bottom: 16px;
    color: var(--primary);
    font-size: 18px;
}

.detail-row {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    border-bottom: 1px solid var(--border-light);
}

.detail-row:last-child {
    border-bottom: none;
}

.detail-label {
    font-weight: 500;
    color: var(--text-medium);
}

.detail-value {
    font-weight: 500;
    color: var(--text-dark);
}

.security-tips {
    background-color: var(--info-light);
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 24px;
}

.security-tips-title {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 16px;
    font-size: 18px;
}

.security-icon {
    font-size: 20px;
}

.security-tip-item {
    display: flex;
    gap: 12px;
    margin-bottom: 12px;
}

.security-tip-item:last-child {
    margin-bottom: 0;
}

.tip-icon {
    flex-shrink: 0;
    color: var(--success);
    font-weight: 700;
}

.tip-content {
    font-size: 14px;
    color: var(--text-medium);
}

.suspicious-alert {
    background-color: var(--danger-light);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 24px;
    display: flex;
    align-items: flex-start;
}

.suspicious-icon {
    flex-shrink: 0;
    margin-right: 12px;
    font-size: 24px;
    color: var(--danger);
}

.suspicious-content {
    font-size: 14px;
    color: var(--danger);
}

.help-section {
    background-color: var(--primary-light);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 24px;
    display: flex;
    align-items: flex-start;
}

.help-icon {
    flex-shrink: 0;
    margin-right: 12px;
    font-size: 24px;
    color: var(--primary);
}

.help-content {
    font-size: 14px;
    color: var(--text-medium);
}
{{/inline}}

