  <div class="detail-container">
    <h3 style="text-align: center; margin-bottom: 16px; color: var(--primary); font-size: 18px; font-weight: 600;">Signup Details</h3>

    <div class="detail-row">
      <div class="detail-label">Email</div>
      <div class="detail-value">{{email}}</div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Mobile</div>
      <div class="detail-value">{{phone}}</div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Signup Date & Time</div>
      <div class="detail-value">{{formatDate date 'short'}} at {{time}}</div>
    </div>

    <div class="detail-row">
      <div class="detail-label">IP Address</div>
      <div class="detail-value">{{ip}}</div>
    </div>
  </div>

